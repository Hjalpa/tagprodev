@import 'lib/global'
@import 'lib/font'
@import 'lib/reset'

//  root
// --------------------------------------------------------------------------

:root
	font-size 16px
	--blue  #0f71e2
	--green #04ba5f
	--red   #ff2b63

html
	touch-action manipulation

body
	background #131317
	height 100%
	width 100%
	display block
	scroll-behavior smooth
	overscroll-behavior none

	.panel-top
		// background #0b0a0f
		display block
		padding 2rem

		h1
			font-size rem
			color rgba(white, .5)


	.pane-wrap
		display flex
		flex-flow nowrap

		.pane
			display flex
			flex-grow 1
			// align-items center
			// justify-content top

		.pane-left
			flex 0 0 15em

			ul
				li

		.pane-right
			border-radius 8px
			display flex
			flex-wrap wrap
			padding 3rem

			.item
				background #1b1b21
				border-radius 8px
				margin 5px
				flex 1 1 21%

				h5
					// background green
					color white
					padding 1rem
					text-transform uppercase

				table
					width 100%
					text-align center
					border-collapse collapse

				thead
					tr
						color white
						font-size .8rem
						background rgba(black, .25)

				tbody
					tr
						// border-bottom 1px solid #1a191e
						// padding 1rem
						border-bottom 1px solid #121116
						color #eee
						font-size .9rem

						td
							padding .2rem

							&:first-child
								background rgba(black, .25)

				.name
					text-align left
