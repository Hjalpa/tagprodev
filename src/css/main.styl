@import 'lib/global'
@import 'lib/font'
@import 'lib/reset'

//  root
// --------------------------------------------------------------------------

:root
	font-size 17px
	--blue  #0f71e2
	--green #04ba5f
	--red   #ff2b63

html
	touch-action manipulation

body
	background #0b0a0f
	height 100%
	width 100%
	display block
	scroll-behavior smooth
	overscroll-behavior none

	.pane-wrap
		display grid
		grid-template-columns 80% 20%

		.pane

			&.content
				background #121116

				.item
					padding 10%
					// border-bottom 1px solid #121116
					border-bottom 1px solid #1a191e


// import page
.import
	background #0b0a0f
	padding 5%

	.contain

		> div
			padding 10px

		.group
		.half1
			border-bottom 1px solid rgba(white .05)
			margin-bottom 10px

		label
			display block
			margin-bottom 15px


	h5
		color white
		font-size 1rem
		display inline-block
		width 200px

	select
	input
		background rgba(white, .05)
		background #121116
		padding 5px 10px
		font-size 1.4rem
		border none
		border-radius 4px
		color #c7c7c7
		width 240px

		&.extra
		&.caps
			margin-left 15px

		&:focus
			box-shadow 0 0 2px 2px blue

	button
		font-size 2rem
		background green
		padding 1rem
		border-radius 20px / 18px
		cursor pointer
		margin-top 20px

		&:focus
			box-shadow 0 0 2px 2px green
