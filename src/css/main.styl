/******************/

@keyframes slideUp
	0%
		transform translateY(5%)
		opacity 0

	80%
		transform translateX(0)

	100%
		opacity 1

.page-select
.page-filter
	.drop-down_list
		display none
		animation slideUp .2s ease-in-out

		&.active
			display block

		.desc
			color #363636
			font-size .85rem
			padding-bottom 1rem

	.map
	.season
		input[disabled]
		input[disabled] + label
			opacity .25
			cursor not-allowed

// compare hide dropdown
.ts-dropdown
	display none

// records
// leaderboards
.tabs
	.left
	.right
		display flex

	.right
		margin-left auto


.log
	a
		color #ff2882
		box-shadow inset 0 -2px 0 0 rgba(#ff2882, .2)

	tr:hover a:hover
		box-shadow none

.tidbits
	position fixed
	bottom 1rem
	left 1rem
	font-size .9rem

	span
		color white
		padding-right .3rem

	a
		color white
		box-shadow inset 0 -2px 0 0 rgba(white, .2)
		margin-right 1rem

		&:hover
			box-shadow none

// records
.mark
	background #f9ffbc !important;


.stats-card
	tr:hover a
		color #ff2882
		box-shadow inset 0 -2px 0 0 rgba(#ff2882, .2)

	tr:hover a:hover
		box-shadow none

.stars
	svg
		display inline-block
		height 1rem
		width 1rem
		vertical-align middle

.wrapwrap
	font-size 0

// player profile
.elowrap
.hourwrap
	margin-right 8px
.monthwrap
.daywrap
	margin-left 8px

.elowrap
.daywrap
.hourwrap
.monthwrap
	display inline-block
	width calc(50% - 8px)
	padding-bottom 15px
	font-size .8rem
	margin-top 10px
	vertical-align top

	#xaxis .domain
		fill none

	.tick
		fill #c3c3c3

	#xaxis text
	#yaxis text
		font-size 12px
		display none

	.domain
		display none


.byseason
	.filter
		text-align right
		display block

	.season:not(:last-child)
		border-bottom 1px solid #e8e8e8

	.season
		padding 1rem 0
		min-height 350px

		h1
			font-size 1.1rem
			margin 0

		.block_left
			display inline-block
			width 70%
			vertical-align top

			ul.stats
				display block
				list-style none
				margin 0
				margin-bottom 1.5rem

				li
					display inline-block
					width 7rem

					.lab
						display block
						font-size: .9rem;
						color: #6c6c6c;

					.val
						font-size 1.4rem
						border-radius: 10px;
						display: inline-block;
						margin-top: .25rem;
						// padding: .4rem .5rem
						// background: #fff3f5;
						// color: #ff2882;

					.pos
						font-weight 700

						&.high
							color #1dbf38
						&.avg
							color #8da034
							color #a9b132



		.block_right
			display inline-block
			width 30%
			min-width 300px
			vertical-align top

		.radar
			display inline-block
			vertical-align top

			.names
				font-size .75rem

			.season1
				stroke rgba(black, .75)

			.season2
				stroke rgba(red, .75)

			.season3
				stroke rgba(blue, .75)
