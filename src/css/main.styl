/******************/

@keyframes slideUp
	0%
		transform translateY(5%)
		opacity 0

	80%
		transform translateX(0)

	100%
		opacity 1

.page-select
.page-filter
	.drop-down_list
		display none
		animation slideUp .2s ease-in-out

		&.active
			display block

		.desc
			color #363636
			font-size .85rem
			padding-bottom 1rem

	.map
	.season
		input[disabled]
		input[disabled] + label
			opacity .25
			cursor not-allowed

// compare hide dropdown
.ts-dropdown
	display none

// records
// leaderboards
.tabs
	.left
	.right
		display flex

	.right
		margin-left auto


.log
	a
		color #ff2882
		box-shadow inset 0 -2px 0 0 rgba(#ff2882, .2)

	tr:hover a:hover
		box-shadow none

.tidbits
	position fixed
	bottom 1rem
	left 1rem
	font-size .9rem

	span
		color white
		padding-right .3rem

	a
		color white
		box-shadow inset 0 -2px 0 0 rgba(white, .2)
		margin-right 1rem

		&:hover
			box-shadow none

// records
.mark
	background #f9ffbc !important;


.stats-card
	tr:hover a
		color #ff2882
		box-shadow inset 0 -2px 0 0 rgba(#ff2882, .2)

	tr:hover a:hover
		box-shadow none

.stars
	svg
		display inline-block
		height 1rem
		width 1rem
		vertical-align middle

.wrapwrap
	font-size 0

// player profile
.hourwrap
	margin-left 8px

.monthwrap
	margin-right 8px

.daywrap
.hourwrap
.monthwrap
	display inline-block
	width calc(50% - 8px)
	padding-bottom 15px
	font-size .8rem
	margin-top 10px
	vertical-align top

	#xaxis .domain
		fill none

	.tick
		fill #c3c3c3

	#xaxis text
	#yaxis text
		font-size 12px
		display none

	.domain
		display none


.radar
	display inline-block
	width calc(100% - 530px)
	margin-left 20px
	vertical-align top
	height 500px
	margin-top 10px
