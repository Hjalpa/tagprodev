/******************/

@keyframes slideUp
	0%
		transform translateY(5%)
		opacity 0

	80%
		transform translateX(0)

	100%
		opacity 1

.page-select
.page-filter
	.drop-down_list
		display none
		animation slideUp .2s ease-in-out

		&.active
			display block

		.desc
			color #363636
			font-size .85rem
			padding-bottom 1rem

	.map
	.season
		input[disabled]
		input[disabled] + label
			opacity .25
			cursor not-allowed

// compare hide dropdown
.ts-dropdown
	display none

