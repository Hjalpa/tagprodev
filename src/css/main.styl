:root
	font-size 17px
	font-family 'Montserrat', sans-serif
	color-scheme dark
	--width 1450px


body
	background #131417
	height 100%

	display flex
	flex-direction column

	flex-wrap nowrap
	justify-content flex-start
	align-items stretch
	align-content stretch

	--color #004aff
	--glow var(--color)

	&.nf1
		// redo this color to green?
		--color #ff0044

		.nav-bar-primary
			background #5f0b21bd

			a
				color #c75555

				&.active
					span
						color: #ff9e00;
						box-shadow: 0 2px 0 0 #fb9b0024;


				&:hover
					color white

	&.ecltp
		--color #ff0044

		.nav-bar-primary
			background #5f0b21bd

			a
				color #c75555

				&.active
					span
						color: #ff9e00;
						box-shadow: 0 2px 0 0 #fb9b0024;


				&:hover
					color white

.background
	background black url('https://i.imgur.com/ycymETc.png')
	background-position center -867px
	// background black url('https://i.imgur.com/trirbHV.png')
	// background-position center -922px
	background-size auto 100%
	background-repeat no-repeat
	width 100%
	height 1200px
	display block
	position absolute
	z-index 0
	filter grayscale(40%)

.hide
	display none !important

.nav-bar-primary
	backdrop-filter blur(10px)
	background rgba(15,24,55,.9)
	box-shadow inset 0 0 0 2px rgba(0,0,0,.15),0 0 0 2px transparent,inset 0 -.5rem .5rem -.5rem var(--glow), 0 -.5rem .5rem .5rem var(--glow)
	border-bottom: 2px solid var(--color)
	width 100%
	display flex
	flex-flow nowrap

	a
		color #4a6ba3
		font-size .9rem
		text-decoration none
		padding 0 .8rem
		display inline-block
		vertical-align middle
		height 3rem
		display flex
		align-items center
		justify-content center
		text-transform uppercase
		font-weight 600

		&.active span
			color #1adbd4
			box-shadow 0 2px 0 0 rgba(#1adbd4, 10%)

		&.active
		&:hover
			color white

		&[href="/"]
			padding-left 1.5rem

			svg
				height 1.4rem
				position relative
				margin-top -.15rem

			span
				text-shadow 0 0 15px #e4c7616b
				color #e4c761
				margin-left .6rem
				margin-right 1rem


	.right
		display flex
		align-items center
		justify-content center
		margin-left auto
		padding-right 6px

		a
			color white !important
			box-shadow 0 2px 0 0 #ffffff24
			text-shadow 0 0 20px #ffffff

		input
			font-size .85rem
			font-weight 400
			color white
			caret-color white
			background-position calc(.75rem) calc(.56rem)
			background-repeat no-repeat
			background-size .95rem .95rem
			border none
			padding .4rem .4rem .4rem 2.1rem
			margin-top -2px
			background-color #132151e6
			background-image url("data:image/svg+xml;charset=utf8,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' fill='none' stroke='%23ffffff' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'><circle cx='11' cy='11' r='8'/><path d='m21 21-4.35-4.35'/></svg>")
			border-radius .4rem

			&:focus
				transition background .2s ease-in-out
				outline none
				color white
				outline 2px solid #f6d616

			&::placeholder
				color #5b7fc0




.nav-bar-secondary
	// clip-path url(#wave)
	padding 1rem 0 0 0
	position relative
	z-index 2

	.wrap
		max-width var(--width)
		margin 0 auto
		display block
		z-index 9
		padding .5rem 1.5rem 0 1.5rem
		color white

		.breadcrumb
			line-height 1.2rem
			font-size .8rem
			text-transform: capitalize;

			a
			.crumb
			.current
				display inline-block
				margin-right .5rem
				color rgba(white, .75)

			a
				border-bottom 2px solid rgba(white, .1)
				text-decoration none

				&:hover
					border-bottom-color transparent

			.current
				font-weight 600
				color rgba(white, .75)

		h1
			font-weight 800
			font-size 2rem
			color white
			text-shadow 0 0 60px white

		.nav-bar
			padding-top 1rem

			a
				display inline-block
				color white
				padding .8rem 1rem
				text-decoration none
				font-size .9rem
				line-height .9rem
				margin-right .5rem
				border-radius .2rem .2rem 0 0
				background rgba(black, .2)
				backdrop-filter blur(2px)

				&.active
				&:hover
					backdrop-filter none
					position relative
					z-index 99
					color white
					// background linear-gradient(to top right,var(--color),#002787)
					background var(--color) linear-gradient(to top right,var(--color), rgba(black, .47))


.nav-bar-tertiary
	border-bottom 1px solid #ffffff0a
	width 100%
	margin-bottom 1rem
	display flex

	a
		font-size .9rem
		color white
		text-decoration none
		color rgba(white, .3)
		display inline-block
		padding .5rem .75rem

		&.active
		&:hover
			color #1adbd4
			box-shadow inset 0 -2px 0 #1adbd4

	.league + .playoff
		margin-left auto

.contain
	box-shadow inset 0 .5rem .5rem -.5rem var(--glow), 0 -.5rem .5rem -.5rem var(--glow)
	border-top 2px solid var(--color)
	display block
	margin 0 auto
	padding 1.5rem 0
	width 100%
	background #131417
	position relative
	z-index 1

	flex: 1 1 auto;
	display: flex;

	.wrap
		width 100%
		padding 0 1.5rem
		max-width var(--width)
		margin 0 auto


.footer_bottom
	position relative
	padding-top 6rem
	background #131417
	margin-top -1rem
	overflow hidden

	footer
		background #0b0c0e

	.wrap
		column-count 4
		column-gap 2rem
		max-width var(--width)
		width 100%
		margin 0 auto
		padding 1rem 2rem 0 2rem

	.title
		font-size .9rem
		font-weight 600
		// color #a8a8a8
		text-transform uppercase
		text-shadow 0 0 15px rgba(#e4c7616b, .25)
		color: #e4c761;

	.desc
		font-size .8rem
		font-weight 500
		line-height 1.1rem
		color #8b8b8b
		width 80%

		a
			text-decoration none
			padding-bottom .2rem
			color: #858585;
			box-shadow: inset 0 -2px 0 0 #87878729

			&:hover
				color #538cff
				box-shadow none

	.hd
		text-transform uppercase
		font-weight 500
		font-size .9rem
		color #485077
		letter-spacing .05rem
		padding-left .5rem
		color #9f9f9f96

	.col
		display block
		height 180px
		line-height 2rem

		> a
			display block
			color white
			padding-left .5rem
			font-size .9rem
			text-decoration none
			color #b9b9b9

			&:not(:last-child)
				box-shadow 0 1px 0 0 rgba(white, .03)

			&:hover
				color #538cff

	.socialmedia
		display none

		a
			display inline-block
			box-shadow none !important
			margin-right .8rem

			svg
				height 1.5rem
