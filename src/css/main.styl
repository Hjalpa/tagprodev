@import 'base/reset.styl'
@import 'base/helpers.styl'
@import 'base/form.styl'

/* plugins */
@import 'plugins/nouislider.min.styl'
@import 'plugins/tom-select.bootstrap5.styl'

/* custom variables */
@import 'custom/variables.styl'
@import 'custom/type.styl'
@import 'custom/form.styl'
@import 'custom/buttons.styl'
@import 'custom/components.styl'
@import 'custom/layout.styl'

/******************/

@keyframes slideUp
	0%
		transform translateY(5%)
		opacity 0

	80%
		transform translateX(0)

	100%
		opacity 1

.page-select
.page-filter
	.drop-down_list
		display none
		animation slideUp .2s ease-in-out

		&.active
			display block

		.desc
			color #363636
			font-size .85rem
			padding-bottom 1rem

	.map
	.season
		input[disabled]
		input[disabled] + label
			opacity .25
			cursor not-allowed

// compare hide dropdown
.ts-dropdown
	display none

// records
// leaderboards
.tabs
	.left
	.right
		display flex

	.right
		margin-left auto


.log
	a
		color #ff2882
		box-shadow inset 0 -2px 0 0 rgba(#ff2882, .2)

	tr:hover a:hover
		box-shadow none

// records
.mark
	background #f9ffbc !important;


.stats-card
	tr:hover a
		color #ff2882
		box-shadow inset 0 -2px 0 0 rgba(#ff2882, .2)

	tr:hover a:hover
		box-shadow none

.stars
	svg
		display inline-block
		height 1rem
		width 1rem
		vertical-align middle

.wrapwrap
	font-size 0

// player profile
.elowrap
.hourwrap
	margin-right 8px
.monthwrap
.daywrap
	margin-left 8px

.elowrap
.daywrap
.hourwrap
.monthwrap
	display inline-block
	width calc(50% - 8px)
	padding-bottom 15px
	font-size .8rem
	margin-top 10px
	vertical-align top

	#xaxis .domain
		fill none

	.tick
		fill #c3c3c3

	#xaxis text
	#yaxis text
		font-size 12px
		display none

	.domain
		display none


.byseason
	.filter
		display block
		text-align right

		label
			cursor pointer

			span
				font-weight 300
				display inline-block
				margin-left .25rem





	.season:not(:last-child)
		border-bottom 1px solid #e8e8e8

	.season
		min-height 350px

		h1
			font-size 1.1rem

		.block_left
			display inline-block
			width 30%
			vertical-align top

			.title
				font-size 1rem
				font-weight 700
				padding 0 0 0.5rem 0

			ul.stats
				display block
				list-style none
				margin 0
				margin-bottom 1.5rem

				li
					display block
					width 10rem
					padding .2rem 0
					font-size .9rem

					&:not(:last-child)
						border-bottom: 1px solid #f9f9f9;

					.lab
						display inline-block
						color: #6c6c6c;
						width 40%

					.pos
						width 50%
						display: inline-block;
						text-align right

						&.high
							color #1dbf38
							font-weight 700
						&.avg
							color #a9b132
							font-weight 700


		.block_right
			display inline-block
			width 30%
			min-width 300px
			vertical-align top
			text-align center

		.radar
			display inline-block
			vertical-align top

			.names
				font-size .75rem

			.season1
				stroke rgba(black, .75)

			.season2
				stroke rgba(red, .75)

			.season3
				stroke rgba(blue, .75)



.search
	height 34px
	width 20rem
	display block
	top 0
	right 0
	position absolute

	input
		background rgba(black, .73)
		background #1c031f
		// background white
		padding 1rem
		color white
		// color #363636
		width 80%
		// border-radius 10px 0 0 10px
		height inherit
		font-size 1rem
		vertical-align top

		&::placeholder
			color rgba(white, .5)

		&:focus
			outline none

	button
		vertical-align top
		width 20%
		display inline-block
		border none
		background linear-gradient(to right bottom,#2999f5,#1859d1)
		// border-radius 0 10px 10px 0
		cursor pointer
		height inherit

		svg
			fill white
			height 1rem

.searchresults
	a
		padding: 2rem;
		display: inline-block;
		width: 200px;
		background: rgba(#eee, .5);
		border: 1px solid rgba(#ccc, .5);
		border-radius: 6px;
		cursor: pointer;
		margin-right 1rem
		margin-bottom 1rem
		text-align center

		em
			font-style normal
			color #ff2882
			box-shadow inset 0 -2px 0 0 rgba(#ff2882, .2)

		&:hover
			background #fef7ff

			em
				box-shadow none

.last-updated
	a
		width 7rem
		text-align center
		padding 1rem
		font-weight bold
		color white

		&.active
			color #363636
			background #eaff04

.modes
	position absolute
	left 250px
	height 34px

	a
		display inline-block
		width 7rem
		text-align center
		padding .5rem
		font-weight bold
		color white
		box-sizing border-box
		height inherit

		&.active
			background #eaff04
			color #37003c

.summary
	.highlight-good
		background #dfffe3
		color #11930a

	.highlight-bad
		background #ffdfdf
		color #c34e4e
