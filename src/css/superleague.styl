.overview

	.info
		display block
		margin-bottom 1rem

		.block
			display inline-block
			margin-right 1rem
			font-size .8rem

			.k
				display inline-block
				border-radius 6px 0 0 6px
				padding .5rem
				background linear-gradient(to top right,#000,#0b0c0e)
				color #8b8b8b

			.v
				display inline-block
				border-radius 0 6px 6px 0
				background rgba(#0b0c0e, .75)
				color white
				padding .5rem .8rem
				font-weight 600

			&.dates
				em
					padding 0 .4rem
					display inline-block
					font-weight 700
					font-style normal
					font-size 1rem
					line-height .8rem
					color #8b8b8b

	.playoff_results
		display grid
		column-gap 1rem
		--grid-width calc(25% - (2rem / 4))
		grid-template-columns var(--grid-width) calc(var(--grid-width) * 2) var(--grid-width)

		.pane
			margin-bottom 1rem
			border-radius 6px 6px 0 0

			.headline
				padding .8rem 0 .6rem 0
				font-size .9rem
				font-weight 600
				color #a8a8a8
				text-transform uppercase
				background linear-gradient(to top right,#000000,#0b0c0e)
				text-align center
				border-radius 6px 6px 0 0

			&.champions
				display flex
				flex-direction column
				background none

				.container
					border-radius 6px
					background #0b0c0e

					&.crowned
						animation buzz 6s infinite
						box-shadow 0 0 20px rgba(white, .1)

					svg
						fill url(#gold.trophy)
						width 1.1rem
						height 1.1rem
						vertical-align text-bottom

					.text
						color #e5c661
						display block

					.team
						text-shadow 0 0 10px var(--teamglow)
						box-shadow 0 2px 0 #a336af1c
						color var(--teamcolor)
						font-size .9rem
						line-height 2rem
						font-weight 600
						text-align center
						text-transform uppercase
						display inline

					.players
						padding .6rem 0 1.4rem 0
						width 100%
						display block

						li
							display block
							width 100%

							&:hover
								background rgba(black, .2)

							.name
								font-size .9rem
								line-height 1.6rem
								display inline-block
								width 80%
								color #dbdbdb
								padding-left 2.2rem

							.captain
							.manager
								display inline-block
								position absolute
								padding-left 1rem

								svg
									height .6rem
									width .6rem
									fill var(--teamcolor)
									// box-shadow 0 0 10px var(--teamglow)
									vertical-align -2px

							.country
								display inline-block
								width 20%
								text-align right
								padding-right 1rem

								img
									display inline-block
									height 12px
									width 16px
									border-radius 3px
									box-shadow 0 0 10px rgba(black, .3)
									position relative
									top 1px

			.crowned + .league
				margin-top 1rem

			.league

				.headline
					border-radius 6px

					svg
						fill url(#silver.trophy)

					.text
						color #ddd


			&.final
				flex-direction column
				justify-content space-between
				display flex

				.content
					text-align center
					height calc(100% - (.9rem + .6rem))

				iframe
					width 100%
					height 100%

				.content {
					overflow: hidden;
					position: relative;
					width:100%;
				}

				.content::after {
					padding-top: 56.25%;
					display: block;
					content: '';
				}

				.contentiframe {
					position: absolute;
					top: 0;
					left: 0;
					width: 100%;
					height: 100%;
				}

				.watchfinal
					display block
					background var(--color)
					background black
					color white
					text-align center
					text-decoration none
					border-radius 0 0 6px 6px
					font-size .9rem
					padding .3rem

					&:hover
						opacity .8



			&.mvb

				.container
					border-radius 6px
					background #0b0c0e

				svg
					fill url(#gold.mainGradient)
					width 1.1rem
					height 1.1rem
					vertical-align text-bottom

				.text
					color #e5c661
					display block

				.row
					display flex
					flex-direction row
					align-items stretch

					&:nth-of-type(even)
						background #08080a

					.item
						color white
						font-size .9rem
						flex 1
						display flex
						align-items center
						padding .2rem 0

						a
							text-decoration none
							color #b9b9b9

						&.rank
							color rgba(white, .15)
							background black
							font-size .7rem
							flex 0 0 24px
							justify-content center

						&.team
							font-size .8rem
							font-weight 600
							text-transform uppercase
							text-align left
							padding-left .5rem
							flex 0 0 52px
							text-shadow 0 0 10px var(--teamglow)
							color var(--teamcolor)
							justify-content left

						&.player
							justify-content left

						&.value
							justify-content right
							flex 0 0 75px
							padding-right .5rem

						&.test
							justify-content right
							flex 0 0 110px
							padding-right .5rem

							.v
								font-size .8rem
								display inline-block
								text-align right
								width 30px
								width 100%

							.bar
								display inline-block
								width 100%
								background #ffffff17
								height 8px
								border-radius 2px
								display none

								.inner
									display block
									height inherit
									border-radius inherit
									background #e5c762

					&.top
						.inner
							box-shadow 0 0 10px #e5c762

						.v
							text-shadow: 0 0 10px #e5c762;
							color: #e5c762;

					&:hover
						.rank
							color #a8ff62

						.date
						.player
							a
								color #538cff
								box-shadow inset 0 -2px 0 0 #538cff33

								&:hover
									box-shadow none



	.upcoming
		display block
		height 2rem
		width 100%





