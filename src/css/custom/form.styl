/* Custom form styling here */
input[type='text'],
input[type='number'],
input[type='date'],
input[type='password'],
input[type='email'],
textarea,
.dropdown,
select
  width: $field-width
  font-family: $font-family
  border: none
  background-color: $field-bg
  color: $field-color
  border-radius: $field-radius
  padding $field-padding
  max-width $field-max-width
  &:focus
    fieldoutline()
    outline: 0
    color white
  &.error, &:invalid
    fieldoutline($error-bg)
  &.valid
    fieldoutline($valid-bg)
  &::placeholder
    font-style: italic
    color: $placeholder-color

  &:read-only:not(select)
    background-color: #1C203F
    cursor no-drop
    &:focus
      box-shadow none
      color $field-color

  &::-webkit-calendar-picker-indicator
    filter: invert(1)
/* remove default browser arrow */
select
  appearance: none
  text-indent: 0.1
  text-overflow: ''
select::-ms-expand
  display: none
/* end remove arrow */
.dropdown,
select
  padding $field-padding
  padding-right 30px
  background-image url("data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' width='451.847' height='451.847'%3E%3Cpath style='fill:%237F84B2' d='M225.923 354.706c-8.098 0-16.195-3.092-22.369-9.263L9.27 151.157c-12.359-12.359-12.359-32.397 0-44.751 12.354-12.354 32.388-12.354 44.748 0l171.905 171.915 171.906-171.909c12.359-12.354 32.391-12.354 44.744 0 12.365 12.354 12.365 32.392 0 44.751L248.292 345.449c-6.177 6.172-14.274 9.257-22.369 9.257z'/%3E%3C/svg%3E")
  background-size 14px
  background-position calc(100% - 14px) calc(100% - 48%)
  background-repeat no-repeat
  option
    padding: $field-padding 0

label
  @extend $labelstyle
  &.error
    color: $error-color
    font-weight: normal
    padding: 0.5em 0
.form-group
  @extend $field-group
form
  h2
    font-size: 1.2rem
    margin-bottom: 2em
//messages
.message
  padding: .2em .5em
  display: inline-block
  &.success
    color: white
    background: #4CAF50
  &.error
    color: #fbfbfb
    background: #D75350
input, textarea, select
  & + .error
    position: relative
    margin-top: .5rem
    &:before
      content: ''
      display: block
      background: #D75350
      position: absolute
      top: -5px
      left: 10px
      height: 10px
      width: 10px
      transform: rotate(45deg)
//checkboxes
.form_checkbox-wrapper
  margin-bottom: $field-margin-bottom
  & + &
    margin-left 3rem
  input[type="checkbox"]
    opacity: 0
    display: none
  label
    position: relative
    display: inline-block
    &::before,
		&::after
      position: absolute
      content: ""
      /*Needed for the line-height to take effect*/
      display: inline-block
    /*Outer box of the fake checkbox*/
    &::before
      height: 2.6em
      width: 2.6em
      background-color: $field-bg
      left: 0px
      top: calc(1.2em + 0.5rem)
      border-radius: $field-radius
    /*Checkmark of the fake checkbox*/
    &::after
      height: 7px
      width: 13px
      transform: rotate(-45deg)
      border-left: 2px solid white
      border-bottom: 2px solid white
      left: .8em
      top: calc(1.2em + 0.5rem + 13px)
  /*Hide the checkmark by default*/
  input[type="checkbox"] + label::after
    content: none
  /*Unhide on the checked state*/
  input[type="checkbox"]:checked + label::after
    content: ""
  /*Adding focus styles on the outer-box of the fake checkbox*/
  input[type="checkbox"]:focus + label::before
    outline: $primary-color auto 5px
  /* on hover */
  &:hover label::before
    fieldoutline()
    outline: 0
  /*checked */
  input:checked + label::before
    background-color: $primary-color
