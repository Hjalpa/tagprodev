@font-face
	font-family: "Nunito"
	src local('Nunito Regular'), local('Nunito-Regular'), url('Nunito-Regular.woff2')
	font-weight 400
	font-style normal

@font-face
	font-family: "Nunito"
	src local('Nunito Bold'), local('Nunito-Bold'), url('Nunito-Bold.woff2')
	font-weight 700
	font-style normal

@font-face
	font-family: "Nunito"
	src local('Nunito Regular Italic'), local('Nunito-Regular-Italic'), url('Nunito-Italic.woff2')
	font-weight 400
	font-style italic

:root
	font-family: $font-family
	font-size: 15px
	color: $body-color
h1
	margin-bottom: 1.9em
	color $title-color
	margin 0
	font-size 1.9em
	font-weight 700
h2
	font-size: 1.45rem
	margin: 0
	font-weight: 700
h3
	font-size: 1.2rem
	margin-bottom: 1em
	font-weight: 700
h4
	font-size: 1rem
	margin-bottom: 1em
	font-weight: bold
p
	margin-bottom: 1.2em
	line-height: 1.6
a
	color: $body-color
	&:hover, &:focus
		text-decoration none
	//accessibility
	&:focus
		//box-shadow: 0 0 1px #222222

::selection
	background-color: $selection-color
	color: white
