/***************BUTTON HELPERS********************/
$button-reset
	border: 2px solid transparent
	background: none
	cursor: pointer
	font-size: 1rem
	font-family: $font-family
	text-align: center
	display: inline-block
	transition: all 0.2s
	text-decoration: none
$button-disabled
	background-color: $disabled-color
	color: #ffffff
	cursor: default

	&:hover
		background-color: #989898
		color: #ffffff

my-button($font-weight = normal, $background = $button-bg, $background-hover = $button-bg-hover, $color = white, $color-hover = white, $text-transform = initial )
	@extend $button-reset
	background-color: $background
	border-radius: 44px;
	color: $color
	padding 0.6em 1.4em
	min-width 4rem
	font-size .9rem
	text-transform $text-transform

	&:hover,
	&:focus
		background-color: $background-hover
		color: $color-hover
		outline none

	&:disabled
		@extend $button-disabled

	//ripple effect
	position: relative;
	overflow: hidden;
	transform: translate3d(0, 0, 0);

	&:after
		content: "";
		display: block;
		position: absolute;
		width: 100%;
		height: 100%;
		top: 0;
		left: 0;
		pointer-events: none;
		background-image: radial-gradient(circle, #fff 10%, transparent 10.01%);
		background-repeat: no-repeat;
		background-position: 50%;
		transform: scale(10, 10);
		opacity: 0;
		transition: transform .5s, opacity 1s;

	&:active:after
			transform: scale(0, 0);
			opacity: .3;
			transition: 0s;

$button
	my-button()

$button-secondary
	my-button(400, $tertiary-color, #d2048b, white, white, uppercase)

$button-negative
	my-button(400, transparent, transparent, $button-delete-color, $button-delete-color)
	border-color $button-delete-bg

/**************END BUTTON HELPERS*********************/
//primary button
.button
	@extend $button

//secondary button
.button-secondary
	@extend $button-secondary

//negative button
.button-negative
	@extend $button-negative

