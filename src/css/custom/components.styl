    .rank
        font-weight 700

    table
        th
            padding-top $stats-th-tb
            padding-bottom $stats-th-tb
        td
            padding-top $stats-td-tb
            padding-bottom $stats-td-tb

    footer
        font-size: .9rem;
        text-align right
        padding: 1.2rem 1.4rem 1.2rem .8rem;
        a
            color: #37003c;
            font-weight: 700;
            text-decoration: none;


            .icon
