			height: 30px;
			line-height: 30px;

	.rank
		font-weight 700

	table
		th
			padding-top $stats-th-tb
			padding-bottom $stats-th-tb
		td
			padding-top $stats-td-tb
			padding-bottom $stats-td-tb

	footer
