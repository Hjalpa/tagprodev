//============== general tables ==============
.table-sticky
	th
		position sticky
		top 0
		box-shadow 0 2px 0 0 rgba(0, 0, 0, 0.06)
table
	width 100%

	td
		padding: $table-cell-padding
	th
		font-size .9em
		border none
		text-align left
		font-weight 700
		padding: $table-th-padding
		color $table-th-color
		vertical-align: middle
		background-color $table-th-bg

		span
			text-decoration none
			color $table-th-color
			display block

		&.sort-asc
		&.sort-desc
			span
				color $body-color

		&.sort
			cursor pointer

			&:hover span
				color: $body-color

			& span:after
				display inline-block
				content ""
				width 18px
				height 18px
				position absolute
				margin-left .5em
				top 50%
				transform translateY(-50%)
				background-size contain
				background-repeat no-repeat

			&.sort-asc span:after
				background-image url("data:image/svg+xml;charset=utf8,%3Csvg width='25' height='25' viewBox='0 0 25 25' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1.5625 7.9375L2.66719 9.04219L5.46875 6.24062V22H7.03125V6.24062L9.83281 9.04219L10.9375 7.9375L6.25 3.25L1.5625 7.9375Z' fill='%232F2F2F'/%3E%3Cpath d='M23.4686 20.375H12.5311V21.9375H23.4686V20.375Z' fill='%232F2F2F'/%3E%3Cpath d='M20.3436 15.6875H12.5311V17.25H20.3436V15.6875Z' fill='%23242424'/%3E%3Cpath d='M17.2186 11H12.5311V12.5625H17.2186V11Z' fill='%232F2F2F'/%3E%3C/svg%3E")

			&.sort-desc span:after
				background-image: url("data:image/svg+xml;charset=utf8,%3Csvg width='25' height='25' viewBox='0 0 25 25' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1.5625 17.1875L2.66719 16.0828L5.46875 18.8844V3.125H7.03125V18.8844L9.83281 16.0828L10.9375 17.1875L6.25 21.875L1.5625 17.1875Z' fill='%232F2F2F'/%3E%3Cpath d='M23.4686 6.25H12.5311V4.6875H23.4686V6.25Z' fill='%232F2F2F'/%3E%3Cpath d='M20.3436 10.9375H12.5311V9.375H20.3436V10.9375Z' fill='%23242424'/%3E%3Cpath d='M17.2186 15.625H12.5311V14.0625H17.2186V15.625Z' fill='%232F2F2F'/%3E%3C/svg%3E");

	tbody
		tr
			border-bottom 1px solid $table-row-color

			&:not(.top):hover
				td
					background-color $table-tr-hover-bg

		td
			vertical-align bottom

	.bold
		font-weight: 700
	.text-r
		text-align right

	.text-c
		text-align center

	.pos
		display block
		color rgba(6,6,6,0.43)



	.reorder-btn
		display: inline-block;
		vertical-align: middle;
		margin-left: .5rem;
		width: 3rem;
		height: 3rem;
		border-radius: 2px;
		cursor: pointer;
		transition: .2s;
		position: relative;
		border-radius: 5px

		&.asc
			.icon-sort
				background-image url("data:image/svg+xml;charset=utf8,%3Csvg width='25' height='25' viewBox='0 0 25 25' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1.5625 7.9375L2.66719 9.04219L5.46875 6.24062V22H7.03125V6.24062L9.83281 9.04219L10.9375 7.9375L6.25 3.25L1.5625 7.9375Z' fill='%232F2F2F'/%3E%3Cpath d='M23.4686 20.375H12.5311V21.9375H23.4686V20.375Z' fill='%232F2F2F'/%3E%3Cpath d='M20.3436 15.6875H12.5311V17.25H20.3436V15.6875Z' fill='%232F2F2F'/%3E%3Cpath d='M17.2186 11H12.5311V12.5625H17.2186V11Z' fill='%232F2F2F'/%3E%3C/svg%3E")

		&.desc
			.icon-sort
				background-image: url("data:image/svg+xml;charset=utf8,%3Csvg width='25' height='25' viewBox='0 0 25 25' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1.5625 17.1875L2.66719 16.0828L5.46875 18.8844V3.125H7.03125V18.8844L9.83281 16.0828L10.9375 17.1875L6.25 21.875L1.5625 17.1875Z' fill='%232F2F2F'/%3E%3Cpath d='M23.4686 6.25H12.5311V4.6875H23.4686V6.25Z' fill='%232F2F2F'/%3E%3Cpath d='M20.3436 10.9375H12.5311V9.375H20.3436V10.9375Z' fill='%232F2F2F'/%3E%3Cpath d='M17.2186 15.625H12.5311V14.0625H17.2186V15.625Z' fill='%232F2F2F'/%3E%3C/svg%3E");

		&:hover,&:focus
			background-color: #e8e8e8

	.icon-sort
		position: absolute;
		top: 50%;
		left: 50%;
		z-index: 1;
		content: "";
		width: 25px;
		height: 25px;
		background-repeat no-repeat
		display: block
		transform: translate(-50%, -50%);


	// cells with icons
	.has-icon
		display: flex

		&_icon
			width: 30px;
			height: 20px;
			display: inline-block;
		&_label
			margin-left 1em


//============ flags ==================//
.flag
	width: 30px;
	height: 20px;
	background: url(img/flags-sprite.png) no-repeat
.GB-ENG
	background-position: -120px -140px;
.DE
	background-position: -120px -120px;
.FR
	background-position: -60px -140px;

//============ fiters ==================//
.page-filter
	display: flex;
	margin-bottom: 3rem;
	padding: 0;
	border: 1px solid #e8e8e8;
	border-radius: .3rem;
	align-items: center;

.drop-down
	position: relative;
	cursor: pointer;
	width: 20rem;
	padding: 0;
	display: inline-block;
	vertical-align: top;
	max-width: 17rem;
	flex: 1;

	&:before
		background: #e8e8e8;
		bottom: 1rem;
		content: "";
		display: block;
		height: auto;
		position: absolute;
		right: 0;
		top: 1rem;
		width: 1px;

	&_label
		position: absolute;
		left: 1rem;
		top: 1rem;
		pointer-events: none;
		margin-bottom: 0.3rem;
		font-size: .9rem;
		color: #963cff;
		font-weight: 700;
		font-style: italic
		white-space: nowrap;

	&_current
		font-weight: 700
		transition: all .2s;
		text-overflow: ellipsis;
		overflow: hidden;
		white-space: nowrap;
		color: #2f2f2f;
		padding: 2.5rem 1rem 1rem 1rem

