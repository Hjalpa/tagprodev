	font-weight: 400;
	font-size: .8rem;
	color #777676

.noUi-target
	padding: 0 15px;
	height: 4px;
	border: none;
	background: #e5e5e5;
	box-shadow: none;

//handles
.noUi-horizontal .noUi-handle
	box-shadow: none;
	border-radius: 50%;
	width: 2rem;
	height: 2rem;
	top: -14px;
	border-color: $tertiary-color;
	border-width: 2px;
	cursor pointer

	&:before, &:after
		display: none


	&:focus
		outline none
		background $tertiary-color

//slider active range
.noUi-connect
	background $tertiary-color


