//============== stats cards ==============
.stats-card-wrapper
	display grid
	grid-gap 1rem
	grid-template-columns repeat(auto-fit, minmax(310px, 1fr))

.stats-card
	$stats-td-tb = .5em
	$stats-td-highlight-tb = 1em
	$stats-th-tb = 1em

	background: #fff;
	box-shadow: 0 1px 4px 0 rgba(0, 0, 0, 15%)
	border-radius: 3px;
	clear: both;
	font-size: .85rem;
	overflow: auto;
	margin-bottom: .5rem;

	header
		padding 0.8rem 10px  0.1em 10px
		background linear-gradient(to top, #8a34e6, #a353f8)

		h3
			font-weight: 700
			position relative
			color white
			font-size 1.4rem
			margin-bottom: 0;
			padding-bottom: 0.3em;

	.top
		background: $table-highlight;
		color white
		border-bottom none

		td
			padding-top $stats-td-highlight-tb
			padding-bottom $stats-td-highlight-tb

