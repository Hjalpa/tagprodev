//============== stats cards ==============
.stats-card-wrapper
    display grid
    grid-gap 1rem
    grid-template-columns repeat(auto-fit, minmax(310px, 1fr))

.stats-card
    $stats-td-tb = .5em
    $stats-td-highlight-tb = 1em
    $stats-th-tb = 1em

    background: #fff;
    box-shadow: 0 1px 4px 0 rgba(0, 0, 0, 15%)
    border-radius: 3px;
    clear: both;
    font-size: .85rem;
    overflow: auto;
    margin-bottom: .5rem;

    header
        padding 0.8rem 1rem 0.1em

        h3
            font-weight: 700
            position relative
            margin-bottom: 0;
            padding-bottom: 0.3em;

            &:before
                position absolute
                height: 3px
                width: 1em
                background: rgba(255,40,130,1)
                left 0
                bottom 0
                content ''
                display: block

    .top
        background: $table-highlight;
        color white
        border-bottom none

        td
            padding-top $stats-td-highlight-tb
            padding-bottom $stats-td-highlight-tb

        a
            color white

        .pos
            color white
            height: 30px;
