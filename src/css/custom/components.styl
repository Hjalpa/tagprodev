    &_list
        @extend .ul-reset

        transform-origin: top center;
        position: absolute;
        top: 5rem;
        left: 0;
        z-index: 70;
        background: #fff;
        min-width: 100%;
        transition: .1s;
        box-shadow: 0 1px 12px 0 rgba(0, 0, 0, .15);
        border-radius: 0 0 2px 2px;
        max-height: 40rem;
        overflow-y: auto;
        padding: 1rem 0;

        &:before
            background: linear-gradient(270deg,#ff2882,#963cff);
            content: "";
            display: block;
            height: 3px;
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;

