include admin.head.pug

.contain.search.teams
	.wrap

		.navbar

			.controls
				a.new New Team

			form.filters
				input(type="Search", placeholder="Search Team", autofocus, name="name", autocomplete="off", value= (filters.name))

		if teams
			.table
				.row.head
					each n, key in teams
						each v, k in n

							if(k === 'id')
								.item.id ID

							else if(k === 'country')
								.item.country

							else if(k === 'activity')
								.item(data-column="activity") Last Seen

							else
								.item(
									data-column= k
								)= k

						- break

				each n, key in teams
					.row.entry
						each v, k in n

							if(k === 'id')
								.item.id
									a(
										href='/admin/teams/' + v
									)= v

							else if(k === 'country')
								.item.country(
									data-column= k
								)
									if(v)
										- let code = v.toLowerCase()
										img(
											src="https://cdnjs.cloudflare.com/ajax/libs/flag-icon-css/4.1.5/flags/4x3/" + code + ".svg"
										)

							else if(k === 'name')
								.item.name(
									data-column= k
								)
									a(
										href='/admin/teams/' + teams[key].id
									)= v

							else if(k === 'public' || k === 'disabled' || k === 'onboard')
								.item(
									data-column= k
								)
									if(v === true)
										<svg><use xlink:href="#tick"></use></svg>

							else
								.item(
									data-column= k
								)!= v
