			a(href="/admin/leagues" class=(config.nav === 'leagues' ? 'active' : ''))
				span Leagues

			a(href="/admin/users" class=(config.nav === 'users' ? 'active' : ''))
				span Users

			a(href="/admin/log" class=(config.nav === 'logs' ? 'active' : ''))
				span Logs

