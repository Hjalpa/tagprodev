doctype html
html
	head
		title= config.title
		meta(charset='utf-8')
		link(rel='stylesheet', href="https://fonts.googleapis.com/css2?family=Montserrat:wght@500;600;700&display=swap")
		link(rel='stylesheet', href='/signup.css')
		link(rel='icon', href='/favicon.svg', type='image/svg+xml')
		script(defer, type="text/javascript", src="https://api.pirsch.io/pirsch.js", id="pirschjs", data-code="rCf3zbJZfR6JWanXlrObtEsAvLrlZLHS")

	body
		.background
			img(src='https://i.imgur.com/76Nzkgm.png')._1
			img(src='https://i.imgur.com/1ZWMzQn.png')._2
			img(src='https://i.imgur.com/5NgLxbF.png')._3
			img(src='https://i.imgur.com/APTMlFc.png')._4

		.draftpacket
			.inner
				h1= config.title
				table
						thead
							each n, key in signups
								tr
									each v, k in n
										if(k === 'country')
											th.country

										else if(k === 'player')
											th.player Player

										else if(k === 'profile' || k === 'captain')
											- continue

										else if(k === 'avgcost')
											th.avgcost Avg Cost

										else if(k === 'notes')
											th.notes Availability

										else
											th= k

									- break

						tbody
						each n, key in signups
							tr
								each v, k in n
									if(k === 'country')
										td.country
											img(
												src="https://cdnjs.cloudflare.com/ajax/libs/flag-icon-css/4.1.5/flags/4x3/" + v + ".svg"
											)

									else if(k === 'player')
										td.player
											a(
												href= n.profile
											)= v

									else if(k === 'profile' || k === 'captain')
										- continue

									else if(k === 'avgcost')
										td.avgcost= v

									else if(k === 'notes')
										td.notes= v

									else
										td= v




