extends layouts/_layout.pug

block title
	title= Records

block content
	main#main
		header
			h2 Records

		section.stats-card-wrapper

			.stats-card
				header
					h3 Most Caps

				table
					tbody
						each n, key in mostcaps
							tr(class=(key === 0 ? 'top' : ''))
								td.rank
									span.pos #{n.rank}.
									| #{n.player}
								td.text-l= n.date
								td.text-r= n.cap


			.stats-card
				header
					h3 Most Returns

				table
					tbody
						each n, key in mostreturns
							tr(class=(key === 0 ? 'top' : ''))
								td.rank
									span.pos #{n.rank}.
									| #{n.player}
								td.text-l= n.date
								td.text-r= n.returns

			.stats-card
				header
					h3 Most Tags

				table
					tbody
						each n, key in mosttags
							tr(class=(key === 0 ? 'top' : ''))
								td.rank
									span.pos #{n.rank}.
									| #{n.player}
								td.text-l= n.date
								td.text-r= n.tag

			.stats-card
				header
					h3 Most Grabs

				table
					tbody
						each n, key in mostgrabs
							tr(class=(key === 0 ? 'top' : ''))
								td.rank
									span.pos #{n.rank}.
									| #{n.player}
								td.text-l= n.date
								td.text-r= n.grab
