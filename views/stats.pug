extends layouts/_layout.pug

block title
	title #{title} - Tagpro.dev

block content
	main#main
		header

			h2 Stats:
				.drop-down.page-select
					.drop-down_current(role="button")= title
						.drop-down_list
							.mega-nav-wrap
								nav
									h2 General
									ul
										li(role="option")
											a(href="/stats/summary-per-minute") Summary Per Minute
										li(role="option")
											a(href="/stats/wins") Wins
										li(role="option")
											a(href="/stats/mercies") Mercies

								nav
									h2 Attacking
									ul
										li(role="option")
											a(href="/stats/caps") Caps
										li(role="option")
											a(href="/stats/hold") Hold
										li(role="option")
											a(href="/stats/flaccids") Flaccids
								nav
									h2 Defence
									ul
										li(role="option")
											a(href="/stats/prevent") Prevent
										li(role="option")
											a(href="/stats/returns") Returns
										li(role="option")
											a(href="/stats/key-returns") Key Returns
										li(role="option")
											a(href="/stats/quick-returns") Quick Returns
										li(role="option")
											a(href="/stats/tags") Tags
										// li(role="option")
										// 	a(href="/stats/team-cap-from-my-prevent") Team Cap From My Prevent



		.page-filter
			.drop-down.season
				.drop-down_label Filter by Season
				.drop-down_current(role="button")
					span.value All
					.drop-down_list
						ul.check-list
							li(role="option")
								.form_checkbox-wrapper
									input(type="checkbox", name="season", id="season_euctfs2" value="2" checked)
									label(for="season_euctfs2") EU CTF S2
							li(role="option")
								.form_checkbox-wrapper
									input(type="checkbox", name="season", id="season_euctfs1" value="1" checked)
									label(for="season_euctfs1") EU CTF S1

			.drop-down.elo
				.drop-down_label Filter by ELO
				.drop-down_current(role="button")
					span.value 2000-3000
					.drop-down_list(style="width:150%" class="pad")
						p.desc Average ELO across both teams
						#slider.slider

			.drop-down.map
				.drop-down_label Filter by Map
				.drop-down_current(role="button") All
					.drop-down_list
						ul
							li(role="option" class="filter-all")
								.form_checkbox-wrapper
									input(type="checkbox", name="checka", id="checka" checked)
									label(for="checka") All Seasons
							li(role="option")
								.form_checkbox-wrapper
									input(type="checkbox", name="checkb", id="checkb" )
									label(for="checkb") CTF Season 2
							li(role="option")
								.form_checkbox-wrapper
									input(type="checkbox", name="checkc", id="checkc")
									label(for="checkc") CTF Season 1


			.filter-submit
				button.button-secondary Apply


		section
			table.table-sticky
				thead
					each raw in results
						- function th(string){ return string.replace(/(?:_| |\b)(\w)/g, function($1){return $1.toUpperCase().replace('_',' ');});}

						tr
							- let n = 0
							- let last = Object.keys(raw).length
							each v, k in raw
								-- ++n
								if(k === 'rank')
									th(style="width:70px")
								else if(k === 'player')
									th Player
								else
									if(last === n)
										th.text-c.sort.sort-desc
											span= th(k)
									else
										th.text-c.sort
											span= th(k)
							- break

				tbody
					each raw in results
						tr
							each v, k in raw
								if(k === 'rank' || k === 'player')
									td.bold= v
								else
									td.text-c= v
